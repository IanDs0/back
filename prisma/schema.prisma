// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//login
model User {
  id             String @id @default(uuid())
  username       String @unique
  email          String @unique
  password_token String
  salt           String

  @@map("users")
}

//clientes
model Cliente {
  id               String   @id @default(uuid())
  cnpj             String   @unique
  nome             String
  data_de_fundacao DateTime
  tipo             Boolean //regular(true) ou avulso(false)
  telefone         String
  email            String   @unique
  endereco         Endereco @relation(fields: [enderecoId], references: [id])
  pessoa           Pessoa[]
  enderecoId       String

  @@map("clientes")
}

//pessoas
model Pessoa {
  id                 String    @id @default(uuid())
  nome               String
  cpf                String    @unique
  data_de_nascimento DateTime 
  telefone           String
  email              String    @unique
  cliente            Cliente[]

  @@map("pessoas")
}

//endere√ßos
model Endereco {
  id         String    @id @default(uuid())
  cep        String
  logradouro String
  numero     String
  bairro     String
  cidade     String
  estado     String
  Cliente    Cliente[]

  @@map("enderecos")
}
